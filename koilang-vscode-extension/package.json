{
    "name": "koilang",
    "displayName": "KoiLang Language Support",
    "description": "Syntax highlighting and language support for KoiLang",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "koilang",
                "aliases": [
                    "KoiLang",
                    "koilang"
                ],
                "extensions": [
                    ".koi"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "koilang",
                "scopeName": "source.koilang",
                "path": "./syntaxes/koilang.json"
            }
        ]
    }
}